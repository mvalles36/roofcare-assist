import axios from 'axios';

const openRouterApi = axios.create({
  baseURL: 'https://api.openrouter.ai', // Adjust if needed
  headers: {
    'Authorization': `Bearer ${import.meta.env.VITE_OPENROUTER_API_KEY}`,
    'Content-Type': 'application/json',
  },
});

export const fetchAiGeneratedScore = async (prompt) => {
  try {
    const response = await openRouterApi.post('/v1/generate', {
      prompt: prompt,
      model: 'openai', // Specify the model if needed
    });
    return response.data;
  } catch (error) {
    console.error('Error fetching AI generated score:', error);
    throw error;
  }
};

export default openRouterApi;
